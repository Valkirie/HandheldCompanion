<UserControl
    x:Class="HandheldCompanion.Controls.HotkeyQuickControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    d:Background="White"
    d:DesignWidth="120"
    mc:Ignorable="d">

    <ikw:SimpleStackPanel Name="MainPanel" Spacing="6">
        <Button Name="QuickButton" HorizontalAlignment="Stretch">
            <ui:FontIcon Name="QuickIcon" Height="40" />
        </Button>

        <TextBlock
            Name="QuickName"
            HorizontalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
    </ikw:SimpleStackPanel>
</UserControl>