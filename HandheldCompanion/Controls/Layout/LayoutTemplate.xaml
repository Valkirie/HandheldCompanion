<UserControl x:Class="HandheldCompanion.Controls.LayoutTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HandheldCompanion.Controls"
             xmlns:resx="clr-namespace:HandheldCompanion.Properties"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800" d:Background="White">

    <StackPanel HorizontalAlignment="Stretch">
        <TextBlock Name="_Author" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">HandheldCompanion</TextBlock>
        <TextBlock Name="_Name" Style="{StaticResource BaseTextBlockStyle}">Gamepad</TextBlock>
        <TextBlock Name="_Description" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap">The template works best for games that are designed with a gamepad in mind.</TextBlock>
    </StackPanel>
</UserControl>
