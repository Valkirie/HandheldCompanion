<ui:SimpleStackPanel
    x:Class="HandheldCompanion.Controls.ButtonStack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HandheldCompanion.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="https://schemas.animasterstudios.com/lib/ui/wpf/modern"
    d:Background="White"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  This is just a reference example, it will be cleared anyway  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Width="60"
            Height="48"
            Margin="0,0,6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Foreground="{DynamicResource AccentButtonBackground}"
            Style="{DynamicResource TabViewButtonStyle}">
            ADD
        </Button>
        <local:ButtonMapping Grid.Column="1" />
    </Grid>

</ui:SimpleStackPanel>