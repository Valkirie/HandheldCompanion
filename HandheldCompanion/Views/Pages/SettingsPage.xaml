<Page x:Class="HandheldCompanion.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:HandheldCompanion" 
      xmlns:pages="clr-namespace:HandheldCompanion.Views.Pages"
      xmlns:resx="clr-namespace:HandheldCompanion.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="1000"
      KeepAlive="True"
      Loaded="Page_Loaded"
      Title="{x:Static resx:Resources.SettingsPage_Settings}">

    <Grid Name="MainGrid" Margin="20">
        <ui:SimpleStackPanel Spacing="24">

            <!-- Update manager -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" MinWidth="100"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <ui:FontIcon FontSize="80" FontFamily="{DynamicResource SymbolThemeFontFamily}" Foreground="{DynamicResource SystemControlBackgroundBaseHighBrush}" Glyph="&#xECC5;" HorizontalAlignment="Center"/>
                    <Grid Name="GridUpdateSymbol" Visibility="Collapsed">
                        <ui:FontIcon FontSize="30" FontFamily="{DynamicResource SymbolThemeFontFamily}" Foreground="{DynamicResource SystemAccentColorLight2Brush}" Glyph="&#xE91F;" Margin="50,50,0,0"/>
                        <ui:FontIcon FontSize="20" FontFamily="{DynamicResource SymbolThemeFontFamily}" Foreground="White" Glyph="&#xE73E;" Margin="50,50,0,0"/>
                    </Grid>
                </Grid>

                <ui:SimpleStackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" Spacing="6">
                    <TextBlock Name="LabelUpdate" Text="{x:Static resx:Resources.SettingsPage_UpToDate}" Style="{StaticResource BaseTextBlockStyle}" FontSize="20" Foreground="{DynamicResource SystemControlBackgroundBaseHighBrush}"></TextBlock>
                    <TextBlock Name="LabelUpdateDate" Text="{x:Static resx:Resources.SettingsPage_LastChecked}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"></TextBlock>
                    <ui:ProgressBar Name="ProgressBarUpdate" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,10,0"/>
                </ui:SimpleStackPanel>

                <Button Grid.Column="2" Name="B_CheckUpdate" Content="{x:Static resx:Resources.SettingsPage_CheckForUpdates}" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{DynamicResource AccentButtonStyle}" Click="B_CheckUpdate_Click"/>
            </Grid>

            <!-- Changelog -->
            <TextBox Name="CurrentChangelog" Visibility="Collapsed" ScrollViewer.HorizontalScrollBarVisibility="Auto" IsReadOnly="True" />

            <!-- Update(s) -->
            <ui:SimpleStackPanel Name="CurrentUpdates" Spacing="6"/>

            <!-- General options -->
            <ui:SimpleStackPanel Spacing="6">
                <TextBlock Text="{x:Static resx:Resources.SettingsPage_GeneralOptions}" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>

                <!-- Auto-start application -->
                <Border     
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xED35;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AutoStartApp}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AutoStartAppDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_AutoStart" Grid.Column="1" Toggled="Toggle_AutoStart_Toggled"/>
                    </Grid>
                </Border>

                <!-- Open application in background -->
                <Border  
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xEE40;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_OpenAppBackground}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_OpenAppBackgroundDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_Background" Grid.Column="1" Toggled="Toggle_Background_Toggled"/>
                    </Grid>
                </Border>

                <!-- Close minimizes -->
                <Border  
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE921;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_CloseMinimizes}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_CloseMinimizesDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_CloseMinimizes" Grid.Column="1" Toggled="Toggle_CloseMinimizes_Toggled"/>
                    </Grid>
                </Border>

                <!-- Application theme -->
                <Border  
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="4*" MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE790;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AppTheme}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AppThemeDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:RadioButtons Name="cB_Theme" Grid.Column="1" MaxColumns="2" HorizontalAlignment="Right" SelectionChanged="cB_Theme_SelectionChanged">
                            <Label Content="{x:Static resx:Resources.SettingsPage_ThemeLight}"/>
                            <Label Content="{x:Static resx:Resources.SettingsPage_ThemeDark}"/>
                        </ui:RadioButtons>
                    </Grid>
                </Border>

                <!-- Application theme -->
                <Border  
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}"
                    Visibility="Collapsed">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="4*" MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE790;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_Backdrop}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_BackdropDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:RadioButtons Name="cB_Backdrop" Grid.Column="1" MaxColumns="2" HorizontalAlignment="Right" SelectionChanged="cB_Backdrop_SelectionChanged">
                            <Label Content="{x:Static resx:Resources.SettingsPage_BackdropNone}"/>
                            <Label Content="{x:Static resx:Resources.SettingsPage_BackdropMica}"/>
                            <Label Content="{x:Static resx:Resources.SettingsPage_BackdropTabbed}"/>
                            <Label Content="{x:Static resx:Resources.SettingsPage_BackdropAcrylic}"/>
                        </ui:RadioButtons>
                    </Grid>
                </Border>

                <!-- Application language -->
                <Border  
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="4*" MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xF2B7;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AppLanguage}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_AppLanguageDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:RadioButtons Name="cB_Language" Grid.Column="1" MaxColumns="2" HorizontalAlignment="Right" SelectionChanged="cB_Language_SelectionChanged"/>
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Notification options -->
            <ui:SimpleStackPanel Spacing="6">
                <TextBlock Text="{x:Static resx:Resources.SettingsPage_NotificationOptions}" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>

                <!-- Toast notification -->
                <Border                      
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE7E7;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_ToastNotification}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_ToastNotificationDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_Notification" Grid.Column="1" Toggled="Toggle_Notification_Toggled"/>
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Service options -->
            <ui:SimpleStackPanel Spacing="6">
                <TextBlock Text="{x:Static resx:Resources.SettingsPage_ServiceOptions}" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>

                <!-- Toast notification -->
                <Border                      
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="4*" MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE713;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_StartupType}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_StartupTypeDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:RadioButtons Name="cB_StartupType" Grid.Column="1" MaxColumns="1" HorizontalAlignment="Right" SelectionChanged="cB_StartupType_SelectionChanged" />
                    </Grid>
                </Border>

                <!-- Start with Companion -->
                <Border                      
                            Padding="15,12,12,12"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xEDB5;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_StartWithCompanion}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_StartWithCompanionDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_ServiceStartup" Grid.Column="1" Toggled="Toggle_ServiceStartup_Toggled" IsEnabled="False" IsOn="True">

                        </ui:ToggleSwitch>
                    </Grid>
                </Border>

                <!-- Stop with Companion -->
                <Border                      
                            Padding="15,12,12,12"
                            CornerRadius="{DynamicResource ControlCornerRadius}"
                            Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE71A;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_HaltWithCompanion}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_HaltWithCompanionDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_ServiceShutdown" Grid.Column="1" Toggled="Toggle_ServiceShutdown_Toggled" IsEnabled="False" IsOn="True"/>
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Sensor options -->
            <ui:SimpleStackPanel Spacing="6">
                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorOptions}" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>

                <!-- Sensor Selection -->
                <Border                      
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition Width="4*" MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE950;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorSelection}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorSelectionDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:RadioButtons Name="cB_SensorSelection" Grid.Column="1" HorizontalAlignment="Right" MaxColumns="1" SelectionChanged="cB_SensorSelection_SelectionChanged">
                            <!-- None -->
                            <RadioButton Name="SensorNone">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <ui:FontIcon Glyph="&#xE770;"/>
                                    <Label Content="None"></Label>
                                </ui:SimpleStackPanel>
                            </RadioButton>
                            
                            <!-- Windows -->
                            <RadioButton Name="SensorInternal" IsEnabled="False">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <ui:FontIcon Glyph="&#xE770;"/>
                                    <Label Content="{x:Static resx:Resources.SettingsPage_SensorInternal}"></Label>
                                </ui:SimpleStackPanel>
                            </RadioButton>

                            <!-- SerialUSBIMU -->
                            <RadioButton Name="SensorExternal" IsEnabled="False">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <ui:FontIcon Glyph="&#xECF1;"/>
                                    <Label Content="{x:Static resx:Resources.SettingsPage_SensorExternal}"></Label>
                                </ui:SimpleStackPanel>
                            </RadioButton>

                            <!-- Controller -->
                            <RadioButton Name="SensorController" IsEnabled="False">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <ui:FontIcon Glyph="&#xE7FC;"/>
                                    <Label Content="{x:Static resx:Resources.MainWindow_navController}"></Label>
                                </ui:SimpleStackPanel>
                            </RadioButton>
                        </ui:RadioButtons>
                    </Grid>
                </Border>

                <!-- Sensor Placement Direction -->
                <Border
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}"
                    Name="SensorPlacementVisualisation">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="200"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE80A;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorPlacementDirection}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorPlacementDirectionDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <Grid Grid.Column="1">
                            <ui:SimpleStackPanel Name="Grid_SensorPlacementVisualisation" Spacing="6" HorizontalAlignment="Right" IsEnabled="False">
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Tag="99" Width="50" Height="50" Visibility="Hidden"></Button>
                                    <Button Tag="0" Width="50" Height="50" Click="SensorPlacement_Click"></Button>
                                    <Button Tag="99" Width="50" Height="50" Visibility="Hidden"></Button>
                                </ui:SimpleStackPanel>
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Tag="1" Width="50" Height="50" Click="SensorPlacement_Click"></Button>
                                    <Button Tag="99" Width="50" Height="50" Visibility="Hidden"></Button>
                                    <Button Tag="2" Width="50" Height="50" Click="SensorPlacement_Click"></Button>
                                </ui:SimpleStackPanel>
                                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Tag="99" Width="50" Height="50" Visibility="Hidden"></Button>
                                    <Button Tag="3" Width="50" Height="50" Click="SensorPlacement_Click"></Button>
                                    <Button Tag="99" Width="50" Height="50" Visibility="Hidden"></Button>
                                </ui:SimpleStackPanel>
                            </ui:SimpleStackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Sensor Placement Mirror -->
                <Border
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}"
                    Name="SensorPlacementUpsideDown">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE1CA;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorPlacementUpsideDown}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_SensorPlacementUpsideDownDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_SensorPlacementUpsideDown" Grid.Column="1" Toggled="Toggle_SensorPlacementUpsideDown_Toggled" IsEnabled="False"/>
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Power options -->
            <ui:SimpleStackPanel Spacing="6">
                <TextBlock Text="Power options" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>

                <!-- EnergyStar -->
                <Border                      
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xEA95;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_EcoQoS}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_EcoQoSDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_EnergyStar" Grid.Column="1" Toggled="Toggle_EnergyStar_Toggled"/>
                    </Grid>
                </Border>

                <!-- Configurable TDP -->
                <Border                      
                        Padding="15,12,12,12"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Background="{DynamicResource ExpanderContentBackground}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE713;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPRangeOverride}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPRangeOverrideDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch Name="Toggle_cTDP" Grid.Column="1" Toggled="Toggle_cTDP_Toggled"/>
                    </Grid>
                </Border>

                <!-- Configurable TDP down-->
                <Border
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}"
                    Visibility="{Binding ElementName=Toggle_cTDP, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE713;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPMin}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPMinDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:NumberBox Name="NumberBox_TDPMin" Grid.Column="1" VerticalAlignment="Center" Minimum="3" SpinButtonPlacementMode="Inline" ValueChanged="NumberBox_TDPMin_ValueChanged"></ui:NumberBox>
                    </Grid>
                </Border>

                <!-- Configurable TDP up-->
                <Border
                    Padding="15,12,12,12"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Background="{DynamicResource ExpanderContentBackground}"
                    Visibility="{Binding ElementName=Toggle_cTDP, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*" MinWidth="200"></ColumnDefinition>
                            <ColumnDefinition MinWidth="120"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon FontFamily="{DynamicResource SymbolThemeFontFamily}" Glyph="&#xE713;" Height="40" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPMax}" Style="{StaticResource BodyTextBlockStyle}"/>
                                <TextBlock Text="{x:Static resx:Resources.SettingsPage_TDPMaxDesc}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:NumberBox Name="NumberBox_TDPMax" Grid.Column="1" VerticalAlignment="Center" Maximum="64" SpinButtonPlacementMode="Inline" ValueChanged="NumberBox_TDPMax_ValueChanged"></ui:NumberBox>
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>
    </Grid>
</Page>
