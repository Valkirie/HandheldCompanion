                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                                        <ui:FontIcon Glyph="&#xE8B4;" />
                                                        <Label Content="{l:Static resx:Resources.ProfilesPage_Roll}" />
                                                    </ikw:SimpleStackPanel>
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="6">
                                                        <ui:FontIcon Glyph="&#xE8B4;" />
                                                        <Label Content="{l:Static resx:Resources.ProfilesPage_RollYawAuto}" />
                                                    </ikw:SimpleStackPanel>
                                                </ComboBoxItem>
                                            </ComboBox>
                                        </Grid>

                                        <!--  Separator  -->
                                        <Separator
                                            Margin="-46,0,-16,0"
                                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                            BorderThickness="0,1,0,0" />

                                        <CheckBox
                                            Name="cB_InvertHorizontal"
                                            HorizontalAlignment="Stretch"
                                            Checked="cB_InvertHorizontal_Checked"
                                            Content="{l:Static resx:Resources.ProfilesPage_InvertHorizontalAxis}"
                                            Unchecked="cB_InvertHorizontal_Checked" />

                                        <!--  Separator  -->
                                        <Separator
                                            Margin="-46,0,-16,0"
                                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                            BorderThickness="0,1,0,0" />

                                        <CheckBox
                                            Name="cB_InvertVertical"
                                            HorizontalAlignment="Stretch"
                                            Checked="cB_InvertVertical_Checked"
                                            Content="{l:Static resx:Resources.ProfilesPage_InvertVerticalAxis}"
                                            Unchecked="cB_InvertVertical_Checked" />

                                        <!--  Separator  -->
                                        <Separator
                                            Margin="-46,0,-16,0"
                                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                            BorderThickness="0,1,0,0" />

                                        <Grid>
                                            <Button
                                                Name="MotionControlAdditional"
                                                HorizontalAlignment="Stretch"
                                                Click="b_AdditionalSettings_Click"
                                                Content="{l:Static resx:Resources.ProfilesPage_AdditionalSettings}" />
                                        </Grid>
                                    </ikw:SimpleStackPanel>
                                </Grid>
                            </Expander.Content>
                        </Expander>
                    </ikw:SimpleStackPanel>

                    <!--  Compatibility settings  -->
                    <ikw:SimpleStackPanel Spacing="6">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_Compatibility}" />

                        <!--  Fullscreen optimizations  -->
                        <Border
                            Padding="15,12,12,12"
                            Background="{DynamicResource ExpanderHeaderBackground}"
                            CornerRadius="{DynamicResource ControlCornerRadius}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*" MinWidth="200" />
                                    <ColumnDefinition Width="2*" MinWidth="120" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ui:FontIcon
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Glyph="&#xe740;" />

                                    <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_Compatibility_Fullscreen}" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ui:ToggleSwitch
                                    Name="UseFullscreenOptimizations"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="UseFullscreenOptimizations_Toggled" />
                            </Grid>
                        </Border>

                        <!--  High DPI awareness  -->
                        <Border
                            Padding="15,12,12,12"
                            Background="{DynamicResource ExpanderHeaderBackground}"
                            CornerRadius="{DynamicResource ControlCornerRadius}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8*" MinWidth="200" />
                                    <ColumnDefinition Width="2*" MinWidth="120" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ui:FontIcon
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Glyph="&#xe799;" />

                                    <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_Compatibility_HighDPI}" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <ui:ToggleSwitch
                                    Name="UseHighDPIAwareness"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                                    Toggled="UseHighDPIAwareness_Toggled" />
                            </Grid>
                        </Border>
                    </ikw:SimpleStackPanel>

                    <!--  Controller settings  -->
                    <ikw:SimpleStackPanel Spacing="6">
                        <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{l:Static resx:Resources.ControllerPage_VirtualDeviceSettings}" />

                        <Border
                            Padding="15,12,12,12"
                            Background="{DynamicResource ExpanderHeaderBackground}"
                            CornerRadius="{DynamicResource ControlCornerRadius}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" MinWidth="200" />
                                    <ColumnDefinition Width="5*" MinWidth="200" />
                                </Grid.ColumnDefinitions>

                                <DockPanel>
                                    <ui:FontIcon
                                        Height="40"
                                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                        Glyph="&#xE7FC;" />
                                    <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">

                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_EmulatedController}" />
                                        <TextBlock
                                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{l:Static resx:Resources.ProfilesPage_EmulatedControllerDesc}"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </DockPanel>

                                <DockPanel Grid.Column="1" Margin="12,0,0,0">
                                    <ComboBox
                                        x:Name="cB_EmulatedController"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        SelectedIndex="0"
                                        SelectionChanged="cB_EmulatedController_Changed">
                                        <ComboBoxItem
                                            Name="cB_EmulatedController_disabled"
                                            Content="{l:Static resx:Resources.ProfilesPage_EmulatedControllerDefault}"
                                            Tag="-1" />
                                        <ComboBoxItem
                                            Name="cB_EmulatedController_Xbox"
                                            Content="{l:Static resx:Resources.ProfilesPage_EmulatedControllerXbox}"
                                            Tag="0" />
                                        <ComboBoxItem
                                            Name="cB_EmulatedController_DS4"
                                            Content="{l:Static resx:Resources.ProfilesPage_EmulatedControllerDS4}"
                                            Tag="1" />
                                    </ComboBox>
                                </DockPanel>
                            </Grid>
                        </Border>

                        <Button
                            Name="ControllerSettingsButton"
                            Height="66"
                            Padding="15,12,12,12"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Click="ControllerSettingsButton_Click">
                            <DockPanel HorizontalAlignment="Left">
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xE7FC;" />

                                <ikw:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{l:Static resx:Resources.ProfilesPage_ControllerLayout}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{l:Static resx:Resources.ProfilesPage_ControllerLayoutDesc}"
                                        TextWrapping="Wrap" />
                                </ikw:SimpleStackPanel>
                            </DockPanel>
                        </Button>
                    </ikw:SimpleStackPanel>
                </ikw:SimpleStackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
