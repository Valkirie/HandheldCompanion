                                        ValueChanged="SliderRightTriggerMargin_ValueChanged" />
                                </DockPanel>
                            </ui:SettingsCard>
                        </ui:SettingsExpander.Items>
                    </ui:SettingsExpander>
                </ikw:SimpleStackPanel>
            </ikw:SimpleStackPanel>
        </ikw:SimpleStackPanel>
    </Grid>
