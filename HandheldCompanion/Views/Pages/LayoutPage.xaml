<Page x:Class="HandheldCompanion.Views.Pages.Profiles.LayoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:HandheldCompanion"
      xmlns:common="clr-namespace:HandheldCompanion.Views.Classes"
      xmlns:resx="clr-namespace:HandheldCompanion.Properties"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="{x:Static resx:Resources.ProfilesPage_ControllerLayout}"
      Loaded="Page_Loaded"
      d:Background="White">

    <ui:NavigationView
        Name="navView" PaneDisplayMode="Left"
        ItemInvoked="navView_ItemInvoked"
        Loaded="navView_Loaded"
        OpenPaneLength="150"
        Margin="20"
        IsPaneToggleButtonVisible="False"
        IsBackButtonVisible="Collapsed"
        SelectionFollowsFocus="Enabled"
        ShoulderNavigationEnabled="WhenSelectionFollowsFocus"
        IsSettingsVisible="False">

        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Name="navButtons" Content="Buttons" Tag="ButtonsPage">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF093;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Name="navDpad" Content="Dpad" Tag="DpadPage">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF10E;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Name="navTriggers" Content="Triggers" Tag="TriggersPage">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF10A;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Name="navJoysticks" Content="Joysticks" Tag="JoysticksPage">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xF108;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Name="navTrackpads" Content="Trackpads" Tag="TrackpadsPage" Visibility="Collapsed">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEFA5;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Name="navGyro" Content="Gyro" Tag="GyroPage" Visibility="Collapsed" IsEnabled="False">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE777;"></ui:FontIcon>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>
        </ui:NavigationView.MenuItems>
        
        <!-- Padding is set to NavView OpenPaneLength-->
        <Grid Name="MainGrid" Margin="20">
            <StackPanel>
                <!-- Profile picker -->
                <ui:SimpleStackPanel Name="LayoutPickerPanel" Spacing="12">
                    
                    <TextBlock Text="Layout picker" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>
                    <ComboBox Name="cB_Layouts" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalAlignment="Center" SizeChanged="cB_Layouts_SizeChanged">

                        <!-- TEMPLATES -->
                        <ComboBoxItem Name="cB_LayoutsSplitterTemplates" IsEnabled="false">TEMPLATES</ComboBoxItem>
                        <ComboBoxItem Name="cB_LayoutsSplitterCommunity" IsEnabled="false">COMMUNITY</ComboBoxItem>
                        
                        <!--                        
                        <ComboBoxItem>
                            <ui:SimpleStackPanel>
                                <TextBlock Text="Gamepad" Style="{StaticResource BaseTextBlockStyle}"/>
                                <TextBlock TextWrapping="Wrap" Text="This template is for games that already have built-in gamepad support. Intended for dual stick games such as twin-stick shooters, side-scrollers, etc."/>
                            </ui:SimpleStackPanel>
                        </ComboBoxItem>                        
                        -->
                    </ComboBox>

                    <ui:SimpleStackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Right">
                        <Button Name="ButtonApplyLayout" Style="{DynamicResource AccentButtonStyle}" Click="ButtonApplyLayout_Click">
                            Apply layout
                        </Button>
                        <Button Name="ButtonLayoutSettings" Click="ButtonLayoutSettings_Click">
                            <ui:SymbolIcon Symbol="Setting"/>
                        </Button>
                    </ui:SimpleStackPanel>
                </ui:SimpleStackPanel>
                
                <TextBlock Text="Current Layout" Style="{StaticResource BaseTextBlockStyle}"></TextBlock>
                <ui:Frame
                Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type FrameworkElement}}}"
                Name="ContentFrame"
                HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
    </ui:NavigationView>
</Page>