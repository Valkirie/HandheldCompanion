<Window x:Class="HandheldCompanion.Views.Windows.OverlayTrackpad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandheldCompanion.Views.Windows"
        xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Overlay" WindowStyle="None" Visibility="Collapsed" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Topmost="True" Focusable="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid Name="VirtualTrackpads" Margin="20">
        <!-- Left Trackpad -->
        <Border
                    Name="LeftTrackpad"
                    CornerRadius="10"
                    Background="Black"
                    Opacity="0.25"
                    HorizontalAlignment="Left" Height="250" Width="250"
                    PreviewTouchMove="Trackpad_PreviewTouchMove"
                    PreviewTouchDown="Trackpad_PreviewTouchDown"
                    PreviewTouchUp="Trackpad_PreviewTouchUp">
        </Border>

        <!-- Right Trackpad -->
        <Border
                    Name="RightTrackpad"
                    CornerRadius="10"
                    Background="Black"
                    Opacity="0.25"
                    HorizontalAlignment="Right" Height="250" Width="250"
                    PreviewTouchMove="Trackpad_PreviewTouchMove"
                    PreviewTouchDown="Trackpad_PreviewTouchDown"
                    PreviewTouchUp="Trackpad_PreviewTouchUp">
        </Border>
    </Grid>
</Window>
