<Page
    x:Class="HandheldCompanion.Views.QuickPages.QuickProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:HandheldCompanion.Views.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HandheldCompanion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Profiles"
    Margin="15,0,0,0"
    d:Background="White"
    d:DesignHeight="1500"
    d:DesignWidth="500"
    KeepAlive="True"
    mc:Ignorable="d">

    <ui:SimpleStackPanel Spacing="6">

        <Grid>
            <!--  Header  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <DockPanel>
                        <Image
                            Name="ProfileIcon"
                            Grid.Column="0"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center" />

                        <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                Name="ProcessName"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Static resx:Resources.QuickProfilesPage_Waiting}" />
                            <TextBlock
                                Name="ProcessPath"
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                TextWrapping="Wrap" />
                        </ui:SimpleStackPanel>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <Grid Name="StackProfileToggle">
            <!--  Header  -->
            <Border Padding="15,0,15,0" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.2*" MinWidth="80" />
                    </Grid.ColumnDefinitions>

                    <DockPanel>
                        <ui:FontIcon
                            Height="40"
                            HorizontalAlignment="Center"
                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                            Glyph="&#xE7EE;" />

                        <TextBlock
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Static resx:Resources.ProfilesPage_EnableProfile}" />
                    </DockPanel>

                    <ui:ToggleSwitch
                        Name="ProfileToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsEnabled="False"
                        Style="{DynamicResource InvertedToggleSwitchStyle}"
                        Toggled="ProfileToggle_Toggled" />
                </Grid>
            </Border>
        </Grid>

        <ui:SimpleStackPanel Name="GridProfile" Spacing="6">
            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <Grid Name="StackProfileUMC">
                <!--  Header  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <ui:SimpleStackPanel Spacing="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.2*" MinWidth="80" />
                            </Grid.ColumnDefinitions>

                            <DockPanel>
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xE759;" />

                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_UMCSettings}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.ProfilesPage_UMCSettingsDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DockPanel>

                            <ui:ToggleSwitch
                                Name="UMCToggle"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Style="{DynamicResource InvertedToggleSwitchStyle}"
                                Toggled="UMCToggle_Toggled" />
                        </Grid>
                    </ui:SimpleStackPanel>
                </Border>
            </Grid>

            <Grid Name="StackProfileUMCSettings">
                <!--  Header  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=UMCToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Border.IsEnabled>
                        <MultiBinding Converter="{StaticResource IsEnabledConverter}">
                            <Binding ElementName="ProfileToggle" Path="IsOn" />
                            <Binding ElementName="UMCToggle" Path="IsOn" />
                        </MultiBinding>
                    </Border.IsEnabled>

                    <ui:SimpleStackPanel Spacing="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_StyleofInput}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofInputTooltip}" />
                                <TextBlock
                                    Name="Text_InputHint"
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_Input"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxColumns="2"
                            SelectedIndex="0"
                            SelectionChanged="cB_Input_SelectionChanged" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_StyleofOutput}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCSelectionRightLeftDesc}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_Output"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxColumns="2"
                            SelectedIndex="0"
                            SelectionChanged="cB_Output_SelectionChanged" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCMotionOnOff}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCMotionOnOffDesc}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_UMC_MotionDefaultOffOn"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            MaxColumns="2"
                            SelectionChanged="cB_UMC_MotionDefaultOffOn_SelectionChanged">
                            <RadioButton Content="{x:Static resx:Resources.ProfilesPage_UMCMotionOff}" />
                            <RadioButton Content="{x:Static resx:Resources.ProfilesPage_UMCMotionOn}" />
                        </ui:RadioButtons>

                        <!--  Content  -->
                        <Grid
                            Name="UMC_Activator"
                            Grid.Column="1"
                            Width="Auto"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <ui:SimpleStackPanel Name="GridAntiDeadzone" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="420" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_UMCAntiDeadzone}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.ProfilesPage_UMCAntiDeadzoneDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <!--  Content  -->
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock
                                    Width="35"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N0, ElementName=SliderUMCAntiDeadzone, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{x:Static resx:Resources.ProfilesPage_AntiDeadzoneUnitPercentage}" />
                                <Slider
                                    x:Name="SliderUMCAntiDeadzone"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="0"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="10"
                                    Maximum="40"
                                    SmallChange="1"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderUMCAntiDeadzone_ValueChanged" />
                            </DockPanel>
                        </ui:SimpleStackPanel>

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <ui:SimpleStackPanel Name="GridSensivity" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="420" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Static resx:Resources.SettingsMode0_Sensitivity}"
                                        ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.SettingsMode0_SensitivityDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <!--  Content  -->
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.ProfilesPage_SensitivityX}" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N1, ElementName=SliderSensitivityX, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <Slider
                                    x:Name="SliderSensitivityX"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="1"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.1"
                                    Maximum="3.0"
                                    Minimum="0.1"
                                    SmallChange="0.1"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickFrequency="0.1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderSensitivityX_ValueChanged"
                                    Value="1" />
                            </DockPanel>

                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.ProfilesPage_SensitivityY}" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N1, ElementName=SliderSensitivityY, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <Slider
                                    x:Name="SliderSensitivityY"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="1"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.1"
                                    Maximum="3.0"
                                    Minimum="0.1"
                                    SmallChange="0.1"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickFrequency="0.1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderSensitivityY_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                        </ui:SimpleStackPanel>
                    </ui:SimpleStackPanel>
                </Border>
            </Grid>

            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <!--  Framerate Limit  -->
            <ui:SimpleStackPanel Name="StackProfileFramerate" Spacing="2">

                <!--  Header  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xF119;" />

                            <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_FramerateLimit}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_FramerateLimitDesc}"
                                    TextWrapping="Wrap" />
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="FramerateToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="FramerateToggle_Toggled" />
                    </Grid>
                </Border>

                <!--  Content  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=FramerateToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <DockPanel
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        ScrollViewer.PanningMode="HorizontalOnly">

                        <ui:SimpleStackPanel
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            ScrollViewer.PanningMode="HorizontalOnly">
                            <Slider
                                x:Name="FramerateSlider"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="True"
                                Maximum="3"
                                Minimum="0"
                                Style="{DynamicResource SliderStyle1}"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                ValueChanged="FramerateSlider_ValueChanged" />

                            <Grid Name="FramerateModeGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Name="FramerateQuarter"
                                    Grid.Column="0"
                                    Margin="0,0,51,0"
                                    HorizontalAlignment="Center"
                                    Text="|" />
                                <TextBlock
                                    Name="FramerateThird"
                                    Grid.Column="1"
                                    Margin="0,0,19,0"
                                    HorizontalAlignment="Center"
                                    Text="|" />
                                <TextBlock
                                    Name="FramerateHalf"
                                    Grid.Column="2"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Center"
                                    Text="|" />
                                <TextBlock
                                    Name="FramerateFull"
                                    Grid.Column="3"
                                    Margin="50,0,0,0"
                                    HorizontalAlignment="Center"
                                    Text="|" />
                            </Grid>
                        </ui:SimpleStackPanel>
                    </DockPanel>
                </Border>
            </ui:SimpleStackPanel>

            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <!--  Thermal Power (TDP) Limit  -->
            <ui:SimpleStackPanel
                Name="StackProfileTDP"
                IsEnabled="False"
                Spacing="2">

                <!--  Header  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE713;" />

                            <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_TDPOverride}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_TDPOverrideDesc}"
                                    TextWrapping="Wrap" />
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="TDPToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="TDPToggle_Toggled" />
                    </Grid>
                </Border>

                <!--  TDP  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=TDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="Power limit target" />
                        <DockPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            ScrollViewer.PanningMode="HorizontalOnly">
                            <TextBlock
                                Width="35"
                                VerticalAlignment="Center"
                                Text="{Binding Value, StringFormat=N0, ElementName=TDPSlider, Mode=OneWay}"
                                TextAlignment="Center" />
                            <TextBlock
                                Width="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Static resx:Resources.QuickPerformancePage_TDPUnitWatt}" />
                            <Slider
                                x:Name="TDPSlider"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"
                                SmallChange="1"
                                Style="{DynamicResource SliderStyle1}"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                ValueChanged="TDPSlider_ValueChanged" />
                        </DockPanel>
                    </StackPanel>
                </Border>
            </ui:SimpleStackPanel>

            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <!--  Auto TDP  -->
            <ui:SimpleStackPanel
                Name="StackProfileAutoTDP"
                IsEnabled="False"
                Spacing="2">

                <!--  AutoTDP Toggle  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE9D9;" />

                            <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{x:Static resx:Resources.ProfilesPage_AutoTDP}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_AutoTDPDesc}"
                                    TextWrapping="Wrap" />
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="AutoTDPToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="AutoTDPToggle_Toggled" />
                    </Grid>
                </Border>

                <!--  Auto TDP Requested FPS Slider  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=AutoTDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.ProfilesPage_AutoTDPFPS}" />

                        <DockPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            ScrollViewer.PanningMode="HorizontalOnly">
                            <TextBlock
                                Width="35"
                                VerticalAlignment="Center"
                                Text="{Binding Value, StringFormat=N0, ElementName=AutoTDPRequestedFPSSlider, Mode=OneWay}"
                                TextAlignment="Center" />
                            <TextBlock
                                Width="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="FPS" />
                            <Slider
                                x:Name="AutoTDPRequestedFPSSlider"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"
                                Maximum="60"
                                Minimum="30"
                                SmallChange="5"
                                Style="{DynamicResource SliderStyle1}"
                                TickFrequency="5"
                                TickPlacement="BottomRight"
                                ValueChanged="AutoTDPRequestedFPSSlider_ValueChanged"
                                Value="30" />
                        </DockPanel>
                    </StackPanel>
                </Border>

                <!--  Separator  -->
                <Separator
                    BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderThickness="0,1,0,0"
                    Opacity="0.25" />

                <!--  Processor energy performance preference policy  -->
                <ui:SimpleStackPanel Name="StackProfileEPP" Spacing="2">

                    <!--  Header  -->
                    <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.2*" MinWidth="80" />
                            </Grid.ColumnDefinitions>

                            <DockPanel>
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xf57c;" />

                                <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Energy performance preference (EPP)" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="Specifies power distribution policy between CPU and GPU"
                                        TextWrapping="Wrap" />
                                </ui:SimpleStackPanel>
                            </DockPanel>

                            <ui:ToggleSwitch
                                Name="EPPToggle"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Style="{DynamicResource InvertedToggleSwitchStyle}"
                                Toggled="EPPToggle_Toggled" />
                        </Grid>
                    </Border>

                    <!--  Content  -->
                    <Border
                        Padding="15,6,15,6"
                        d:Visibility="Visible"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Visibility="{Binding ElementName=EPPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="CPU/GPU power balance" />
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">

                                <ui:SimpleStackPanel
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Center"
                                    ScrollViewer.PanningMode="HorizontalOnly">
                                    <Slider
                                        x:Name="EPPSlider"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        AutoToolTipPlacement="TopLeft"
                                        AutoToolTipPrecision="0"
                                        IsMoveToPointEnabled="True"
                                        IsSnapToTickEnabled="True"
                                        LargeChange="10"
                                        Maximum="100"
                                        Minimum="0"
                                        SmallChange="1"
                                        Style="{DynamicResource SliderStyle1}"
                                        TickFrequency="10"
                                        TickPlacement="BottomRight"
                                        ValueChanged="EPPSlider_ValueChanged" />

                                    <Grid Name="EPPGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Text="CPU" />
                                        <TextBlock
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Text="GPU" />
                                    </Grid>
                                </ui:SimpleStackPanel>
                            </DockPanel>
                        </StackPanel>
                    </Border>
                </ui:SimpleStackPanel>

                <!--  Separator  -->
                <Separator
                    BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderThickness="0,1,0,0"
                    Opacity="0.25" />

                <!--  Manual GPU Clock Control  -->
                <ui:SimpleStackPanel
                    Name="StackProfileGPU"
                    IsEnabled="False"
                    Spacing="2">

                    <!--  Header  -->
                    <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.2*" MinWidth="80" />
                            </Grid.ColumnDefinitions>

                            <DockPanel>
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xE950;" />

                                <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.QuickPerformancePage_GPUControl}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.QuickPerformancePage_GPUControlDesc}"
                                        TextWrapping="Wrap" />
                                </ui:SimpleStackPanel>
                            </DockPanel>

                            <ui:ToggleSwitch
                                Name="GPUToggle"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Style="{DynamicResource InvertedToggleSwitchStyle}"
                                Toggled="GPUToggle_Toggled" />
                        </Grid>
                    </Border>

                    <!--  Content  -->
                    <Border
                        Padding="15,6,15,6"
                        d:Visibility="Visible"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Visibility="{Binding ElementName=GPUToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Static resx:Resources.ProfilesPage_GPUMhz}" />
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock
                                    Width="35"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, ElementName=GPUSlider, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{x:Static resx:Resources.QuickPerformancePage_GPUUnit}" />
                                <Slider
                                    x:Name="GPUSlider"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="0"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="500"
                                    SmallChange="100"
                                    Style="{DynamicResource SliderStyle1}"
                                    TickFrequency="100"
                                    TickPlacement="BottomRight"
                                    ValueChanged="GPUSlider_ValueChanged" />
                            </DockPanel>
                        </StackPanel>
                    </Border>
                </ui:SimpleStackPanel>
            </ui:SimpleStackPanel>

        </ui:SimpleStackPanel>

    </ui:SimpleStackPanel>
</Page>
