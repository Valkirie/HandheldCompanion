<Page
    x:Class="HandheldCompanion.Views.QuickPages.QuickProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HandheldCompanion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Profiles"
    Margin="0,0,0,12"
    d:Background="White"
    d:DesignHeight="1200"
    d:DesignWidth="500"
    KeepAlive="True"
    mc:Ignorable="d">

    <ui:SimpleStackPanel Margin="12,0,0,0" Spacing="6">

        <Grid>
            <!--  Header  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <DockPanel>
                        <ui:FontIcon
                            Height="40"
                            HorizontalAlignment="Center"
                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                            Glyph="&#xE748;" />

                        <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock
                                Name="ProcessName"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Static resx:Resources.QuickProfilesPage_Waiting}" />
                            <TextBlock
                                Name="ProcessPath"
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                TextWrapping="Wrap" />
                        </ui:SimpleStackPanel>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <!--  Buttons  -->
        <Button
            Name="b_CreateProfile"
            Margin="12,2,15,2"
            HorizontalAlignment="Stretch"
            Click="b_CreateProfile_Click"
            Content="{x:Static resx:Resources.QuickProfilesPage_Create}"
            Style="{DynamicResource AccentButtonStyle}"
            Visibility="Collapsed" />

        <ui:SimpleStackPanel Name="GridProfile" Spacing="6">
            <Grid Name="StackProfileToggle">
                <!--  Header  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE7EE;" />

                            <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_EnableProfile}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_EnableProfileDesc}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="ProfileToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            IsEnabled="False"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="ProfileToggle_Toggled" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <Grid Name="StackProfileUMC">
                <!--  Header  -->
                <Border
                    Padding="15,6,15,6"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    IsEnabled="{Binding ElementName=ProfileToggle, Path=IsOn}">

                    <ui:SimpleStackPanel Spacing="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="0.2*" MinWidth="80" />
                            </Grid.ColumnDefinitions>

                            <DockPanel>
                                <ui:FontIcon
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                    Glyph="&#xE759;" />

                                <StackPanel Margin="12,0,0,0" Orientation="Vertical">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_UMCSettings}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.ProfilesPage_UMCSettingsDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DockPanel>

                            <ui:ToggleSwitch
                                Name="UMCToggle"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Style="{DynamicResource InvertedToggleSwitchStyle}"
                                Toggled="UMCToggle_Toggled" />
                        </Grid>
                    </ui:SimpleStackPanel>
                </Border>
            </Grid>

            <!--  Separator  -->
            <Separator
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderThickness="0,1,0,0"
                Opacity="0.25" />

            <Grid Name="StackProfileUMCSettings">
                <!--  Header  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=UMCToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Border.IsEnabled>
                        <MultiBinding Converter="{StaticResource IsEnabledConverter}">
                            <Binding ElementName="ProfileToggle" Path="IsOn" />
                            <Binding ElementName="UMCToggle" Path="IsOn" />
                        </MultiBinding>
                    </Border.IsEnabled>

                    <ui:SimpleStackPanel Spacing="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_StyleofInput}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofInputTooltip}" />
                                <TextBlock
                                    Name="Text_InputHint"
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_Input"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxColumns="2"
                            SelectedIndex="0"
                            SelectionChanged="cB_Input_SelectionChanged" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_StyleofOutput}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCSelectionRightLeftDesc}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_Output"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            MaxColumns="2"
                            SelectedIndex="0"
                            SelectionChanged="cB_Output_SelectionChanged" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="420" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCMotionOnOff}"
                                    ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_UMCMotionOnOffDesc}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <!--  Content  -->
                        <ui:RadioButtons
                            Name="cB_UMC_MotionDefaultOffOn"
                            Grid.Column="1"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            MaxColumns="2"
                            SelectionChanged="cB_UMC_MotionDefaultOffOn_SelectionChanged">
                            <RadioButton Content="{x:Static resx:Resources.ProfilesPage_UMCMotionOff}" />
                            <RadioButton Content="{x:Static resx:Resources.ProfilesPage_UMCMotionOn}" />
                        </ui:RadioButtons>

                        <!--  Content  -->
                        <Grid
                            Name="UMC_Activator"
                            Grid.Column="1"
                            Width="Auto"
                            Margin="6,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center" />

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                        <ui:SimpleStackPanel Name="GridAntiDeadzone" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="420" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_UMCAntiDeadzone}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.ProfilesPage_UMCAntiDeadzoneDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <!--  Content  -->
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock
                                    Width="20"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N0, ElementName=SliderUMCAntiDeadzone, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.ProfilesPage_AntiDeadzoneUnitPercentage}" />
                                <Slider
                                    Name="SliderUMCAntiDeadzone"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="0"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="10"
                                    Maximum="40"
                                    SmallChange="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderUMCAntiDeadzone_ValueChanged" />
                            </DockPanel>
                        </ui:SimpleStackPanel>


                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />


                        <ui:SimpleStackPanel Name="GridSensivity" Spacing="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MinWidth="420" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Static resx:Resources.SettingsMode0_Sensitivity}"
                                        ToolTip="{x:Static resx:Resources.ProfilesPage_StyleofOutputTooltip}" />
                                    <TextBlock
                                        Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Static resx:Resources.SettingsMode0_SensitivityDesc}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <!--  Content  -->
                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.ProfilesPage_SensitivityX}" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N1, ElementName=SliderSensitivityX, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <Slider
                                    Name="SliderSensitivityX"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="1"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.1"
                                    Maximum="3.0"
                                    Minimum="0.1"
                                    SmallChange="0.1"
                                    TickFrequency="0.1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderSensitivityX_ValueChanged"
                                    Value="1" />
                            </DockPanel>

                            <DockPanel
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                ScrollViewer.PanningMode="HorizontalOnly">
                                <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.ProfilesPage_SensitivityY}" />
                                <TextBlock
                                    Width="30"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value, StringFormat=N1, ElementName=SliderSensitivityY, Mode=OneWay}"
                                    TextAlignment="Center" />
                                <Slider
                                    Name="SliderSensitivityY"
                                    Margin="8,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    AutoToolTipPlacement="TopLeft"
                                    AutoToolTipPrecision="1"
                                    IsMoveToPointEnabled="True"
                                    IsSnapToTickEnabled="True"
                                    LargeChange="0.1"
                                    Maximum="3.0"
                                    Minimum="0.1"
                                    SmallChange="0.1"
                                    TickFrequency="0.1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderSensitivityY_ValueChanged"
                                    Value="1" />
                            </DockPanel>
                        </ui:SimpleStackPanel>

                        <!--  Separator  -->
                        <Separator
                            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                            BorderThickness="0,1,0,0"
                            Opacity="0.25" />

                    </ui:SimpleStackPanel>
                </Border>
            </Grid>

            <!--  Thermal Power (TDP) Limit  -->
            <ui:SimpleStackPanel
                Name="StackProfilePower"
                IsEnabled="{Binding ElementName=ProfileToggle, Path=IsOn}"
                Spacing="2">
                <!--  Header  -->
                <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.2*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ui:FontIcon
                                Height="40"
                                HorizontalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Glyph="&#xE713;" />

                            <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.ProfilesPage_TDPOverride}" />
                                <TextBlock
                                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Static resx:Resources.ProfilesPage_TDPOverrideDesc}"
                                    TextWrapping="Wrap" />
                            </ui:SimpleStackPanel>
                        </DockPanel>

                        <ui:ToggleSwitch
                            Name="TDPToggle"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource InvertedToggleSwitchStyle}"
                            Toggled="TDPToggle_Toggled" />
                    </Grid>
                </Border>

                <!--  TDP Sustained  -->
                <Border
                    Padding="15,6,15,6"
                    d:Visibility="Visible"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=TDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.QuickPerformancePage_TDPSustained}" />

                        <DockPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            ScrollViewer.PanningMode="HorizontalOnly">
                            <TextBlock
                                Width="20"
                                VerticalAlignment="Center"
                                Text="{Binding Value, StringFormat=N0, ElementName=TDPSustainedSlider, Mode=OneWay}"
                                TextAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.QuickPerformancePage_TDPUnitWatt}" />
                            <Slider
                                Name="TDPSustainedSlider"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"
                                SmallChange="1"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                ValueChanged="TDPSustainedSlider_ValueChanged" />
                        </DockPanel>
                    </StackPanel>
                </Border>

                <!--  TDP Boost  -->
                <Border
                    Padding="15,6,15,6"
                    CornerRadius="{DynamicResource ControlCornerRadius}"
                    Visibility="{Binding ElementName=TDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.QuickPerformancePage_TDPBoost}" />

                        <DockPanel
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            ScrollViewer.PanningMode="HorizontalOnly">
                            <TextBlock
                                Width="20"
                                VerticalAlignment="Center"
                                Text="{Binding Value, StringFormat=N0, ElementName=TDPBoostSlider, Mode=OneWay}"
                                TextAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.QuickPerformancePage_TDPUnitWatt}" />
                            <Slider
                                Name="TDPBoostSlider"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="0"
                                IsMoveToPointEnabled="True"
                                IsSnapToTickEnabled="True"
                                LargeChange="5"
                                SmallChange="1"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                ValueChanged="TDPBoostSlider_ValueChanged" />
                        </DockPanel>
                    </StackPanel>
                </Border>

            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>

    </ui:SimpleStackPanel>
</Page>
