<Page
    x:Class="HandheldCompanion.Views.QuickPages.QuickPerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:HandheldCompanion.Views.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HandheldCompanion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:HandheldCompanion.Properties"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Performance"
    Margin="0,0,0,12"
    d:Background="White"
    d:DesignHeight="1200"
    d:DesignWidth="500"
    KeepAlive="True"
    mc:Ignorable="d">

    <ui:SimpleStackPanel Margin="12,0,0,0" Spacing="6">

        <!--  Thermal Power (TDP) Limit  -->
        <ui:SimpleStackPanel Spacing="2">
            <!--  Header  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.2*" MinWidth="80" />
                    </Grid.ColumnDefinitions>

                    <DockPanel>
                        <ui:FontIcon
                            Height="40"
                            HorizontalAlignment="Center"
                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                            Glyph="&#xE713;" />

                        <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.QuickPerformancePage_TDPLimit}" />
                            <TextBlock
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Static resx:Resources.QuickPerformancePage_TDPLimitDesc}"
                                TextWrapping="Wrap" />
                        </ui:SimpleStackPanel>
                    </DockPanel>

                    <ui:ToggleSwitch
                        Name="TDPToggle"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsEnabled="False"
                        Style="{DynamicResource InvertedToggleSwitchStyle}"
                        Toggled="TDPToggle_Toggled" />
                </Grid>
            </Border>

            <!--  TDP Sustained  -->
            <Border
                Padding="15,6,15,6"
                d:Visibility="Visible"
                CornerRadius="{DynamicResource ControlCornerRadius}"
                Visibility="{Binding ElementName=TDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                <StackPanel>
                    <TextBlock
                        Width="62"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Static resx:Resources.QuickPerformancePage_TDPSustained}" />

                    <DockPanel
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        ScrollViewer.PanningMode="HorizontalOnly">
                        <TextBlock
                            Width="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsManipulationEnabled="True"
                            Text="{Binding Value, StringFormat=N0, ElementName=TDPSustainedSlider, Mode=OneWay}"
                            TextAlignment="Center" />
                        <TextBlock VerticalAlignment="Center" Text="{x:Static resx:Resources.QuickPerformancePage_TDPUnitWatt}" />
                        <Slider
                            x:Name="TDPSustainedSlider"
                            Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            AutoToolTipPlacement="TopLeft"
                            AutoToolTipPrecision="0"
                            IsMoveToPointEnabled="True"
                            IsSnapToTickEnabled="True"
                            LargeChange="5"
                            Maximum="30"
                            Minimum="5"
                            SmallChange="1"
                            Style="{DynamicResource SliderStyle1}"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            ValueChanged="TDPSustainedSlider_ValueChanged" />
                    </DockPanel>
                </StackPanel>
            </Border>

            <!--  TDP Boost  -->
            <Border
                Padding="15,6,15,6"
                d:Visibility="Visible"
                CornerRadius="{DynamicResource ControlCornerRadius}"
                Visibility="{Binding ElementName=TDPToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

                <StackPanel>
                    <TextBlock
                        Width="62"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Static resx:Resources.QuickPerformancePage_TDPBoost}" />

                    <DockPanel
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        ScrollViewer.PanningMode="HorizontalOnly">
                        <TextBlock
                            Width="20"
                            VerticalAlignment="Center"
                            Text="{Binding Value, StringFormat=N0, ElementName=TDPBoostSlider, Mode=OneWay}"
                            TextAlignment="Center" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Static resx:Resources.QuickPerformancePage_TDPUnitWatt}" />
                        <Slider
                            x:Name="TDPBoostSlider"
                            Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            AutoToolTipPlacement="TopLeft"
                            AutoToolTipPrecision="0"
                            IsMoveToPointEnabled="True"
                            IsSnapToTickEnabled="True"
                            LargeChange="5"
                            Maximum="30"
                            Minimum="5"
                            SmallChange="1"
                            Style="{DynamicResource SliderStyle1}"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            ValueChanged="TDPBoostSlider_ValueChanged" />
                    </DockPanel>
                </StackPanel>
            </Border>

            <!--  Warning  -->
            <Border
                Name="TDPWarning"
                Padding="15,6,15,6"
                Background="{DynamicResource AccentAcrylicBackgroundFillColorBaseBrush}"
                CornerRadius="{DynamicResource ControlCornerRadius}"
                Visibility="Collapsed">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <DockPanel>
                        <Grid>
                            <ui:FontIcon
                                Height="40"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Foreground="White"
                                Glyph="&#xF136;" />
                            <ui:FontIcon
                                Height="40"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                Foreground="Black"
                                Glyph="&#xF13C;" />
                        </Grid>
                        <TextBlock
                            Name="WarningContent"
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Static resx:Resources.QuickPerformancePage_TDPOverWrittenWarning}"
                            TextWrapping="Wrap" />
                    </DockPanel>
                </Grid>
            </Border>
        </ui:SimpleStackPanel>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <!--  Manual GPU Clock Control  -->
        <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.2*" MinWidth="80" />
                </Grid.ColumnDefinitions>

                <DockPanel>
                    <ui:FontIcon
                        Height="40"
                        HorizontalAlignment="Center"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                        Glyph="&#xE950;" />

                    <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.QuickPerformancePage_GPUControl}" />
                        <TextBlock
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Static resx:Resources.QuickPerformancePage_GPUControlDesc}"
                            TextWrapping="Wrap" />
                    </ui:SimpleStackPanel>
                </DockPanel>

                <ui:ToggleSwitch
                    Name="GPUToggle"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    IsEnabled="False"
                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                    Toggled="GPUToggle_Toggled" />
            </Grid>
        </Border>

        <!--  Content  -->
        <Border
            Padding="15,6,15,6"
            d:Visibility="Visible"
            CornerRadius="{DynamicResource ControlCornerRadius}"
            Visibility="{Binding ElementName=GPUToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

            <DockPanel
                Grid.Column="1"
                Margin="0,0,0,0"
                ScrollViewer.PanningMode="HorizontalOnly">
                <TextBlock
                    Width="30"
                    VerticalAlignment="Center"
                    Text="{Binding Value, ElementName=GPUSlider, Mode=OneWay}"
                    TextAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="{x:Static resx:Resources.QuickPerformancePage_GPUUnit}" />
                <Slider
                    x:Name="GPUSlider"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    IsMoveToPointEnabled="True"
                    IsSnapToTickEnabled="True"
                    Style="{DynamicResource SliderStyle1}"
                    TickFrequency="50"
                    TickPlacement="BottomRight"
                    ValueChanged="GPUSlider_ValueChanged" />
            </DockPanel>
        </Border>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <!--  Framerate Limit  -->
        <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.2*" MinWidth="80" />
                </Grid.ColumnDefinitions>

                <DockPanel>
                    <ui:FontIcon
                        Height="40"
                        HorizontalAlignment="Center"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                        Glyph="&#xF119;" />

                    <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Framerate limit" />
                        <TextBlock
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Limits framerate for 3D applications"
                            TextWrapping="Wrap" />
                    </ui:SimpleStackPanel>
                </DockPanel>

                <ui:ToggleSwitch
                    Name="FramerateToggle"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource InvertedToggleSwitchStyle}"
                    Toggled="FramerateToggle_Toggled" />
            </Grid>
        </Border>

        <!--  Content  -->
        <Border
            Padding="15,6,15,6"
            d:Visibility="Visible"
            CornerRadius="{DynamicResource ControlCornerRadius}"
            Visibility="{Binding ElementName=FramerateToggle, Path=IsOn, Converter={StaticResource BooleanToVisibilityConverter}}">

            <DockPanel
                Grid.Column="1"
                Margin="0,0,0,0"
                ScrollViewer.PanningMode="HorizontalOnly">
                <TextBlock
                    Width="30"
                    VerticalAlignment="Center"
                    Text="{Binding Value, ElementName=FramerateSlider, Mode=OneWay}"
                    TextAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="FPS" />
                <Slider
                    x:Name="FramerateSlider"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    AutoToolTipPlacement="TopLeft"
                    AutoToolTipPrecision="0"
                    IsMoveToPointEnabled="True"
                    IsSnapToTickEnabled="True"
                    Maximum="60"
                    Minimum="15"
                    Style="{DynamicResource SliderStyle1}"
                    TickFrequency="5"
                    TickPlacement="BottomRight"
                    ValueChanged="FramerateSlider_ValueChanged" />
            </DockPanel>
        </Border>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <!--  Refresh rate  -->
        <ui:SimpleStackPanel Spacing="6">
            <!--  Header  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="370" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <DockPanel>
                        <ui:FontIcon
                            Height="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI Symbol"
                            Glyph="&#xE2CB;" />

                        <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Display resolution and refresh rate" />
                            <TextBlock
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="Adjust main display resolution and refresh rate"
                                TextWrapping="Wrap" />
                        </ui:SimpleStackPanel>
                    </DockPanel>
                </Grid>
            </Border>

            <!--  Content  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <ComboBox
                        Name="ComboBoxResolution"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        IsReadOnly="True"
                        SelectionChanged="ComboBoxResolution_SelectionChanged" />
                    <ComboBox
                        Name="ComboBoxFrequency"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        IsReadOnly="True"
                        SelectionChanged="ComboBoxFrequency_SelectionChanged" />
                </Grid>
            </Border>
        </ui:SimpleStackPanel>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

        <!--  Power mode  -->
        <ui:SimpleStackPanel Spacing="6">
            <!--  Header  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="370" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <DockPanel>
                        <ui:FontIcon
                            Height="40"
                            HorizontalAlignment="Center"
                            FontFamily="{DynamicResource SymbolThemeFontFamily}"
                            Glyph="&#xEC48;" />

                        <ui:SimpleStackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Static resx:Resources.QuickPerformancePage_PowerMode}" />
                            <TextBlock
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Static resx:Resources.QuickPerformancePage_PowerModeDesc}"
                                TextWrapping="Wrap" />
                        </ui:SimpleStackPanel>
                    </DockPanel>
                </Grid>
            </Border>

            <!--  Content  -->
            <Border Padding="15,6,15,6" CornerRadius="{DynamicResource ControlCornerRadius}">

                <DockPanel Grid.Column="1">
                    <ui:SimpleStackPanel
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        ScrollViewer.PanningMode="HorizontalOnly">
                        <Slider
                            x:Name="PowerModeSlider"
                            VerticalAlignment="Center"
                            AutoToolTipPlacement="None"
                            IsMoveToPointEnabled="True"
                            IsSnapToTickEnabled="True"
                            Maximum="2"
                            Minimum="0"
                            Style="{DynamicResource SliderStyle1}"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            ValueChanged="PowerModeSlider_ValueChanged" />
                        <Grid Name="PowerModeGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Text="{x:Static resx:Resources.QuickPerformancePage_PowerModeEfficiency}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Text="{x:Static resx:Resources.QuickPerformancePage_PowerModeBalanced}" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                Text="{x:Static resx:Resources.QuickPerformancePage_PowerModePerformance}" />
                        </Grid>
                    </ui:SimpleStackPanel>
                </DockPanel>
            </Border>
        </ui:SimpleStackPanel>

        <!--  Separator  -->
        <Separator
            BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderThickness="0,1,0,0"
            Opacity="0.25" />

    </ui:SimpleStackPanel>
</Page>
