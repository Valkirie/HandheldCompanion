                            HorizontalAlignment="Right"
                            IsOn="{Binding HasTurbo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{DynamicResource InvertedToggleSwitchStyle}" />
                    </ui:SettingsCard>
                    <ui:SettingsCard
                        Header="Repeat rate"
                        IsEnabled="{Binding HasTurbo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
