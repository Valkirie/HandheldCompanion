<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <x:Double x:Key="SettingsCardWrapThreshold">150</x:Double>
    <x:Double x:Key="SettingsCardWrapNoIconThreshold">150</x:Double>
    <CornerRadius x:Key="ControlCornerRadius">8,8,8,8</CornerRadius>
    <Thickness x:Key="ButtonPadding">15,10,15,11</Thickness>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ButtonBackground" Color="#F9F9FA"/>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#E7E8EB"/>
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#F1F1F3"/>
            <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#FDFDFE"/>
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="#818A98"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#818A98"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#ADB3BC"/>
            <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#D9DCE0"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#25282C"/>
            <SolidColorBrush x:Key="ButtonBackground" Color="#3E434B"/>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#484E58"/>
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#3A3F47"/>
            <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#2C3035"/>
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="#6B7584"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#6B7584"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#555D69"/>
            <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="#3A3F46"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
